type
  TForm1 = class(TForm)
    procedure FormActivate(Sender: TObject);
    procedure InitializeFields();
  private
    { Private-Deklarationen }
  public
    { Public-Deklarationen }
  end;

  // TODO: TShape Arrays auf TField ändern und dann Klassen für die Sachen

